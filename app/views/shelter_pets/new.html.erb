<%= form_tag "/shelters/#{@shelter.id}/pets", method: :post %>
<%= label_tag "image"%>
<%= text_field_tag :image, nil, placeholder: 'Enter image here'%></br>
<%= label_tag "name"%>
<%= text_field_tag :name, nil,placeholder: "Enter name here"%></br>
<%= label_tag "description"%>
<%= text_field_tag :description, nil,placeholder:"Enter description here"%></br>
<%= label_tag "approximate age"%>
<%= text_field_tag :approximate_age, nil,placeholder:  "Enter approximate age abbreviation here"%></br>
<%= label_tag "sex"%>
<%= text_field_tag :sex, nil,placeholder: "Enter ('female' or 'male')"%></br>
<%= hidden_field_tag :adoptable_status, "adoptable" %>
<%= submit_tag "Create Pet"%>
