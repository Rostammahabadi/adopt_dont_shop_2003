<h1>Pets</h1>

<%@pets.each do |pet|%>
  <p><%=pet.image%></p>
  <h3><%=link_to "#{pet.name}", "/pets/#{pet.id}"%>
    <%= link_to "Update Pet", "/pets/#{pet.id}/edit" %>
    <%= link_to "Delete Pet", "/pets/#{pet.id}", :method => :delete %></h3>
  <p><%=pet.approximate_age%></p>
  <p><%=pet.sex%></p>
  <p><%=link_to "#{Shelter.where("id = #{pet.shelter_id}")[0].name}", "/shelters/#{pet.shelter_id}"%>
<%end%>
