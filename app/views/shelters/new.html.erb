<%= form_tag '/shelters', method: :post %>
<%= label_tag "name"%>
<%= text_field_tag :name, nil, placeholder: 'Enter name here'%></br>
<%= label_tag "address"%>
<%= text_field_tag :address, nil,placeholder: "Enter address here"%></br>
<%= label_tag "city"%>
<%= text_field_tag :city, nil,placeholder:"Enter city here"%></br>
<%= label_tag "state"%>
<%= text_field_tag :state, nil,placeholder:  "Enter state abbreviation here"%></br>
<%= label_tag "zip code"%>
<%= text_field_tag :zip, nil,placeholder: "Enter five digit zip code here"%></br>
<%= submit_tag "Create Shelter"%>
