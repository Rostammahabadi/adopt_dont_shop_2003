<h1><%= @shelter.name %></h1>
<p><%= @shelter.address %></p>
<p><%=@shelter.city%></p>
<p><%=@shelter.state%></p>
<p><%=@shelter.zip%></p>

<%= button_to "Update Shelter", {:action=>"edit"}, :method => :get%>
<%= button_to "Delete Shelter", @shelters, :method => :delete%>

<% @shelter.pets.each do |pet| %>
  <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
  <p><%= pet.description %></p>
  <p><%= pet.approximate_age %></p>
  <p><%= pet.sex %></p>
<% end %>
